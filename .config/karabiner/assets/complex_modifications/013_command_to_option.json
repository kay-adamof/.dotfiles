{
  "title": "app switcher",
  "rules": [
    {
      "description": "switch inpur source",
      "manipulators": [
        {
          "conditions": [
            {
              "type": "input_source_if",
              "input_sources": [
                {
                  "input_source_id": "^com\\.justsystems\\.inputmethod\\.atok32\\.Japanese\\.HalfWidthEiji$"
                }
              ]
            }
          ],
          "type": "basic",
          "from": {
            "key_code": "left_control"
          },
          "to": [
              {
                  "key_code": "left_control",
                  "lazy": true
              }
          ],
          "to_if_alone": [
            {
              "key_code": "z",
              "modifiers": [ "left_control","left_shift" ]
            }
          ]
        },
        {
          "conditions": [
            {
              "type": "input_source_unless",
              "input_sources": [
                {
                  "input_source_id": "^com\\.justsystems\\.inputmethod\\.atok32\\.Japanese\\.HalfWidthEiji$"
                }
              ]
            }
          ],
          "type": "basic",
          "from": {
            "key_code": "left_control"
          },
          "to": [
              {
                  "key_code": "left_control",
                  "lazy": true
              }
          ],
          "to_if_alone": [
            {
              "key_code": "b",
              "modifiers": [ "left_control","left_shift" ]
            }
          ]
        },
        {
          "conditions": [
            {
              "type": "input_source_if",
              "input_sources": [
                {
                  "language": "ja"
                }
              ]
            }
          ],
          "type": "basic",
          "from": {
            "key_code": "left_shift"
          },
          "to": [
              {
                  "key_code": "left_shift",
                  "lazy": true
              }
          ],
          "to_if_alone": [
            {
              "key_code": "c",
              "modifiers": [ "left_control","left_shift" ]
            }
          ]
        },
        {
          "conditions": [
            {
              "type": "input_source_unless",
              "input_sources": [
                {
                  "language": "ja"
                }
              ]
            }
          ],
          "type": "basic",
          "from": {
            "key_code": "left_shift"
          },
          "to": [
              {
                  "key_code": "left_shift",
                  "lazy": true
              }
          ],
          "to_if_alone": [
            {
              "key_code": "b",
              "modifiers": [ "left_control","left_shift" ]
            }
          ]
        }
      ]
    },
    {
      "description": "Close a chrome tab",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "w",
            "modifiers": {
                "mandatory": ["left_option"]
            }
          },
          "to": [
            {
              "key_code": "w",
              "modifiers": ["left_command"]
            }
          ]
        }
      ]
    },
    {
      "description": "Open a new window in chrome",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "n",
            "modifiers": {
                "mandatory": ["left_option"]
            }
          },
          "to": [
            {
              "key_code": "n",
              "modifiers": ["left_command"]
            }
          ]
        }
      ]
    },
    {
      "description": "For Alfred Hotkey",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "a",
            "modifiers": {
                "mandatory": ["left_option"]
            }
          },
          "to": [
            {
              "key_code": "spacebar",
              "modifiers": ["left_option"]
            }
          ]
        }
      ]
    },
    {
      "description": "send selections to deepl",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "e",
            "modifiers": {
                "mandatory": ["left_option"]
            }
          },
          "to": [
            {
              "key_code": "d",
              "modifiers": ["right_command","left_option","left_control"]
            }
          ]
        }
      ]
    },
    {
      "description": "open terminal",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "d",
            "modifiers": {
                "mandatory": ["left_option"]
            }
          },
          "to": [
            {
                "shell_command": "open -a 'Terminal'"
            }
          ]
        }
      ]
    },
    {
      "description": "open vscode",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "s",
            "modifiers": {
                "mandatory": ["left_option"]
            }
          },
          "to": [
            {
                "shell_command": "open '/Applications/Visual Studio Code.app'"
            }
          ]
        }
      ]
    },
    {
      "description": "open chrome",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "f",
            "modifiers": {
                "mandatory": ["left_option"]
            }
          },
          "to": [
            {
                "shell_command": "open -a 'Google Chrome'"
            }
          ]
        }
      ]
    }
  ]
}

{
  "title": "013_command_to_option.json",
  "rules": [
    {
      "description": "Copy",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "c",
            "modifiers": {
                "mandatory": ["left_option"]
            }
          },
          "to": [
            {
              "key_code": "c",
              "modifiers": ["left_command"]
            }
          ]
        }
      ]
    },
    {
      "description": "Paste",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "n",
            "modifiers": {
                "mandatory": ["left_option"]
            }
          },
          "to": [
            {
              "key_code": "v",
              "modifiers": ["left_command"]
            }
          ]
        }
      ]
    },
    {
      "description": "Close a chrome tab",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "w",
            "modifiers": {
                "mandatory": ["left_option"]
            }
          },
          "to": [
            {
              "key_code": "w",
              "modifiers": ["left_command"]
            }
          ]
        }
      ]
    },
    {
      "description": "Open a new window in chrome",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "n",
            "modifiers": {
                "mandatory": ["left_option"]
            }
          },
          "to": [
            {
              "key_code": "n",
              "modifiers": ["left_command"]
            }
          ]
        }
      ]
    },
    {
      "description": "For Alfred Hotkey",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "a",
            "modifiers": {
                "mandatory": ["left_option"]
            }
          },
          "to": [
            {
              "key_code": "spacebar",
              "modifiers": ["left_option"]
            }
          ]
        }
      ]
    },
    {
      "description": "deepl",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "d",
            "modifiers": {
                "mandatory": ["left_option"]
            }
          },
          "to": [
            {
              "key_code": "d",
              "modifiers": ["right_command","left_option","left_control"]
            }
          ]
        }
      ]
    }
  ]
}
